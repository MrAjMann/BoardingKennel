{
  "compilerOptions": {
    "target": "ES2022",
    "typeRoots": ["./types"],
    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    // Adjustments
    "incremental": false,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/pages/about.tsx", "src/pages/api/auth/[...nextauth].ts"  ],
  "exclude": [
    "node_modules"
  ]
}
